<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/itemHolder"
    android:layout_centerInParent="true">

    <ImageView
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:id="@+id/img_mainImage"
        android:scaleType="fitCenter"
        android:contentDescription="@string/main_image_item_condes" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_imageLikes"
        android:layout_alignBottom="@id/img_mainImage"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_imageViews"
        android:layout_alignBottom="@id/img_mainImage"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>